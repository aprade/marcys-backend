{
  "name": "marcys-link",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:aprade/marcys-link.git",
  "author": "Joao Koritar <jakoritarleite@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn run-s _build:clean _build:tsoa _build:tsoa:wait-on _build:typecheck _build:transpile",
    "dev": "nodemon --ext ts --ignore \"./src/routes.ts\" --exec \"yarn run-s build _server:dev\"",
    "start": "yarn run-s build _server:prd",
    "_server:dev": "cross-env NODE_ENV=development node --inspect dist/app.js",
    "_server:prd": "cross-env NODE_ENV=production node dist/app.js",
    "_build:clean": "rimraf ./dist ./public ./src/routes.ts",
    "_build:typecheck": "tsc --pretty --skipLibCheck --noEmit",
    "_build:transpile": "swc src --out-dir dist --sync",
    "_build:tsoa": "concurrently \"tsoa spec\" \"tsoa routes\"",
    "_build:tsoa:wait-on": "wait-on ./src/routes.ts"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.54",
    "@swc/core": "^1.2.120",
    "@types/body-parser": "^1.19.2",
    "@types/express": "^4.17.13",
    "@types/method-override": "^0.0.32",
    "@types/node": "^16.11.12",
    "@types/swagger-ui-express": "^4.1.3",
    "nodemon": "^2.0.15",
    "prisma": "^3.6.0",
    "typescript": "^4.5.3"
  },
  "dependencies": {
    "@prisma/client": "^3.6.0",
    "body-parser": "^1.19.1",
    "concurrently": "^6.4.0",
    "cross-env": "^7.0.3",
    "express": "^4.17.1",
    "method-override": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "swagger-ui-express": "^4.2.0",
    "tsoa": "^3.14.1",
    "wait-on": "^6.0.0"
  }
}
